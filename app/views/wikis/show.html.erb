<div class="container">
<div class="center row">
  <div class="col-md-12">
     <h1><%= @wiki.title %></h1>
      <p><%= @wiki.body %></p>
  </div>
</div>

</br>
</br>
</br>
<div class="row center">
 <div class="col-md-12">
  <% if policy(@wiki).edit? %>
  <%= link_to "Edit", edit_wiki_path(@wiki), class: "btn btn-success" %>
  <% end %>
  <% if policy(@wiki).destroy? %>
  <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
  <% end %>
 </div>
</div>
</div> 