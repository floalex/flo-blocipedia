<div class="container">
<h1 class="center">Edit Wiki</h1>
 
 <div class="row">
   <div class="col-md-6">
    <h2>Edit</h2>
    <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
  </div>

  <div class="row">
   <div class="col-md-6">
    <h2>Preview<h2>
     
   </div>
 </div>
</div>